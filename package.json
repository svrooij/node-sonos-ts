{
  "name": "@svrooij/sonos",
  "version": "0.4.2",
  "description": "A node library to control your sonos devices, written in typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "scripts": {
    "build": "tsc",
    "test": "npm run lint && npm run specs",
    "specs": "mocha -r ts-node/register tests/**/*.test.ts",
    "lint-fix": "eslint ./src/*.ts ./src/**/*.ts --fix",
    "lint": "eslint ./src/*.ts ./src/**/*.ts",
    "gen-srv": "node ./src/generator/service-generator.js",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svrooij/node-sonos-ts.git"
  },
  "keywords": [
    "sonos"
  ],
  "author": "Stephan van Rooij <github@svrooij.nl> (https://svrooij.nl)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/svrooij/node-sonos-ts/issues"
  },
  "homepage": "https://github.com/svrooij/node-sonos-ts#readme",
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^5.2.7",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "fast-xml-parser": "^3.15.0",
    "guid-typescript": "^1.0.9",
    "node-fetch": "^2.6.0"
  },
  "files": [
    "README.md",
    "LICENSE",
    "Funding.yml",
    "lib/**/*.ts",
    "lib/**/*.js"
  ]
}
